{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@total-typescript/tsconfig/bundler/dom/library-monorepo",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"declaration": true,
		"outDir": "dist",
		"noEmit": true,
		"strictPropertyInitialization": false
	},
	"include": ["src", "scripts"],
	"exclude": ["dist", "node_modules"]
}
